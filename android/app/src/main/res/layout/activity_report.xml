<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blue_paper"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layuot1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp">

                <ProgressBar
                    android:id="@+id/progressBar"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:indeterminateOnly="false"
                    android:max="100"
                    android:progress="0"
                    android:progressDrawable="@drawable/circle" />

                <TextView
                    android:id="@+id/progressText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="0%"
                    android:textColor="@color/teal_700"
                    android:textSize="12dp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/lead1"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/lead1Img"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:background="@drawable/uncheck" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lead1"
                        android:textColor="@color/black"
                        android:textSize="6dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/v1"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/lead1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/v1Img"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:background="@drawable/uncheck" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="V1"
                        android:textColor="@color/black"
                        android:textSize="6dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/v2"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/v1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/v2Img"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:background="@drawable/uncheck" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="V2"
                        android:textColor="@color/black"
                        android:textSize="6dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/v3"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/v2"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/v3Img"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:background="@drawable/uncheck" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="V3"
                        android:textColor="@color/black"
                        android:textSize="6dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/v4"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/v3"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/v4Img"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:background="@drawable/uncheck" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="V4"
                        android:textColor="@color/black"
                        android:textSize="6dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/v5"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/v4"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/v5Img"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:background="@drawable/uncheck" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="V5"
                        android:textColor="@color/black"
                        android:textSize="6dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/v6"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/v5"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/v6Img"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:background="@drawable/uncheck" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="V6"
                        android:textColor="@color/black"
                        android:textSize="6dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lead2"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/v6"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/lead2Img"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:background="@drawable/uncheck" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lead 2"
                        android:textColor="@color/black"
                        android:textSize="6dp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/connectBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="6dp"
                    android:text="Start" />

                <Button
                    android:id="@+id/rescanBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="6dp"
                    android:enabled="false"
                    android:text="Rescan"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/nextBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="6dp"
                    android:enabled="false"
                    android:text="Next"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/finishBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="6dp"
                    android:enabled="false"
                    android:text="Finish"
                    android:visibility="gone" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                android:id="@+id/place"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/teal_700"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/Chart_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/timerLayout"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true">
        <ProgressBar
            android:id="@+id/timerBar"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:indeterminateOnly="false"
            android:layout_centerInParent="true"
            android:max="100"
            android:progress="100"
            android:progressDrawable="@drawable/circle" />

        <TextView
            android:id="@+id/timerText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="15"
            android:textColor="@color/teal_700"
            android:textSize="28dp"
            android:textStyle="bold" />
    </RelativeLayout>
</RelativeLayout>
